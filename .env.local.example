# -------------------------------------------------------------------------------------------------
# environment variables
# -------------------------------------------------------------------------------------------------
# - public environment variables must be prefixed with `NEXT_PUBLIC_`.
# - when adding new environment variables, don't forget to also update the
#   validation schema in `./config/env.config.ts`.

# -------------------------------------------------------------------------------------------------
# app
# -------------------------------------------------------------------------------------------------
NEXT_PUBLIC_APP_BASE_URL="http://localhost:3000"
# imprint service
NEXT_PUBLIC_REDMINE_ID=
# web crawlers
NEXT_PUBLIC_BOTS="disabled"
# validate environment variables
ENV_VALIDATION="enabled"

# -------------------------------------------------------------------------------------------------
# analytics
# -------------------------------------------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_MATOMO_BASE_URL="https://matomo.acdh.oeaw.ac.at"
# NEXT_PUBLIC_MATOMO_ID=

# -------------------------------------------------------------------------------------------------
# auth
# -------------------------------------------------------------------------------------------------
AUTH_SIGN_UP="enabled"
# 128 bit (16 byte) base64-encoded string: `openssl rand --base64 16`.
ENCRYPTION_KEY=

# -------------------------------------------------------------------------------------------------
# db
# -------------------------------------------------------------------------------------------------
DB_HOST="localhost"
DB_NAME="acdh-oeaw-app"
DB_PASSWORD=
DB_PORT="5432"
DB_USER="acdh-oeaw"
# apply database migrations at app startup
DB_MIGRATIONS="enabled"

# -------------------------------------------------------------------------------------------------
# email
# -------------------------------------------------------------------------------------------------
# development account config: https://ethereal.email
EMAIL_ADDRESS=
# EMAIL_SMTP_USERNAME=
# EMAIL_SMTP_PASSWORD=
EMAIL_SMTP_SERVER="smtp.oeaw.ac.at"
EMAIL_SMTP_PORT="587"
