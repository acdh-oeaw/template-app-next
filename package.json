{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x",
		"pnpm": "10.x"
	},
	"packageManager": "pnpm@10.5.2",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --no-lint",
		"build": "next build",
		"db:check": "dotenv -c development -- drizzle-kit check --config=./config/drizzle.config.js",
		"db:clear": "dotenv -c development -- tsx ./db/clear.ts",
		"db:drop": "dotenv -c development -- drizzle-kit drop --config=./config/drizzle.config.js",
		"db:generate": "dotenv -c development -- drizzle-kit generate --config=./config/drizzle.config.js",
		"db:migrate": "dotenv -c development -- drizzle-kit migrate --config=./config/drizzle.config.js",
		"db:pull": "dotenv -c development -- drizzle-kit pull --config=./config/drizzle.config.js",
		"db:push": "dotenv -c development -- drizzle-kit push --config=./config/drizzle.config.js",
		"db:reset": "run-s db:clear db:migrate db:seed",
		"db:seed": "dotenv -c development -- tsx ./db/seed.ts",
		"db:studio": "dotenv -c development -- drizzle-kit studio --config=./config/drizzle.config.js",
		"dev": "next dev",
		"dev:db:down": "docker compose --env-file=./.env.local down --volumes",
		"dev:db:dump": "docker compose --env-file=./.env.local exec db pg_dumpall > dump.sql",
		"dev:db:restore": "cat dump.sql | docker compose --env-file=./.env.local exec -T db psql",
		"dev:db:up": "docker compose --env-file=./.env.local up --detach",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"generate:dbml-schema": "dotenv -c development -- tsx ./db/generate-dbml-schema.ts",
		"generate:i18n-message-types": "tsx ./scripts/generate-i18n-message-types.ts",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup generate:i18n-message-types",
		"setup": "is-ci || simple-git-hooks",
		"start": "next start",
		"test": "exit 0",
		"test:e2e": "dotenv -c test -- playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "dotenv -c test -- playwright test --ui",
		"test:e2e:update-snapshots": "dotenv -c test -- playwright test --update-snapshots",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.2.2",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.0.3",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/binary": "^1.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@oslojs/otp": "^1.1.0",
		"@react-aria/utils": "nightly",
		"arctic": "^3.4.0",
		"client-only": "^0.0.1",
		"drizzle-orm": "^0.40.0",
		"drizzle-valibot": "^0.4.0",
		"fast-glob": "^3.3.3",
		"image-dimensions": "^2.3.0",
		"lucide-react": "^0.476.0",
		"next": "canary",
		"next-intl": "v4-beta",
		"nodemailer": "^6.10.0",
		"postgres": "^3.4.5",
		"react": "^19.0.0",
		"react-aria": "nightly",
		"react-aria-components": "nightly",
		"react-dom": "^19.0.0",
		"react-schemaorg": "^2.0.0",
		"react-stately": "nightly",
		"server-only": "^0.0.1",
		"sharp": "^0.33.5",
		"uqr": "^0.1.2",
		"valibot": "^1.0.0-rc.2"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.7",
		"@acdh-oeaw/eslint-config-next": "^2.0.14",
		"@acdh-oeaw/eslint-config-node": "^2.0.7",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.8",
		"@acdh-oeaw/eslint-config-react": "^2.0.9",
		"@acdh-oeaw/eslint-config-tailwindcss": "^2.0.9",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.1.2",
		"@acdh-oeaw/tsconfig": "^1.4.0",
		"@faker-js/faker": "^9.5.0",
		"@next/bundle-analyzer": "canary",
		"@next/eslint-plugin-next": "canary",
		"@playwright/test": "^1.50.1",
		"@react-aria/optimize-locales-plugin": "nightly",
		"@react-types/shared": "nightly",
		"@tailwindcss/postcss": "^4.0.9",
		"@types/node": "^22.13.5",
		"@types/nodemailer": "^6.4.17",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"axe-core": "^4.10.2",
		"axe-playwright": "^2.1.0",
		"ci-info": "^4.1.0",
		"dotenv": "^16.4.7",
		"dotenv-cli": "^8.0.0",
		"dotenv-expand": "^12.0.1",
		"drizzle-dbml-generator": "^0.10.0",
		"drizzle-kit": "^0.30.5",
		"drizzle-seed": "^0.3.1",
		"eslint": "^9.21.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.1.0",
		"eslint-plugin-drizzle": "^0.2.3",
		"globals": "^16.0.0",
		"is-ci": "^4.1.0",
		"lint-staged": "^15.4.3",
		"npm-run-all2": "^7.0.2",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.11.1",
		"stylelint": "^16.14.1",
		"tailwindcss": "^4.0.9",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-react-aria-components": "nightly",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"simple-git-hooks"
		]
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
