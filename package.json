{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x",
		"pnpm": "10.x"
	},
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --no-lint",
		"build": "next build",
		"dev": "next dev",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"i18n:check": "i18n-check --format next-intl --locales ./messages/ --source en --unused ./app/ ./components/",
		"i18n:prepare": "tsx ./scripts/generate-i18n-message-types.ts",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup i18n:prepare",
		"setup": "is-ci || simple-git-hooks",
		"start": "next start",
		"storybook:build": "storybook build --config-dir ./config/storybook/",
		"storybook:dev": "storybook dev --config-dir ./config/storybook/ --no-open --port 6006 --quiet",
		"storybook:test": "vitest run --config ./config/vitest.config.ts --project=storybook",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.2",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.0.3",
		"@react-aria/utils": "^3.29.0",
		"@valibot/i18n": "^1.0.0",
		"client-only": "^0.0.1",
		"fast-glob": "^3.3.3",
		"image-dimensions": "^2.3.0",
		"lucide-react": "^0.511.0",
		"next": "canary",
		"next-intl": "^4.1.0",
		"react": "^19.1.0",
		"react-aria": "^3.40.0",
		"react-aria-components": "^1.9.0",
		"react-dom": "^19.1.0",
		"react-schemaorg": "^2.0.0",
		"react-stately": "^3.38.0",
		"server-only": "^0.0.1",
		"sharp": "^0.34.2",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.9",
		"@acdh-oeaw/eslint-config-next": "^2.0.19",
		"@acdh-oeaw/eslint-config-node": "^2.0.9",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.10",
		"@acdh-oeaw/eslint-config-react": "^2.0.13",
		"@acdh-oeaw/eslint-config-storybook": "^3.0.0",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.0",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.2.0",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@chromatic-com/storybook": "^4.0.0",
		"@lingual/i18n-check": "^0.8.4",
		"@next/bundle-analyzer": "canary",
		"@next/eslint-plugin-next": "canary",
		"@playwright/test": "^1.52.0",
		"@react-aria/optimize-locales-plugin": "^1.1.5",
		"@storybook/addon-a11y": "^9.0.13",
		"@storybook/addon-docs": "^9.0.13",
		"@storybook/addon-onboarding": "^9.0.13",
		"@storybook/addon-themes": "^9.0.13",
		"@storybook/addon-vitest": "^9.0.13",
		"@storybook/nextjs-vite": "^9.0.13",
		"@tailwindcss/postcss": "^4.1.7",
		"@types/node": "^22.15.21",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"@typescript-eslint/utils": "^8.32.1",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"axe-core": "^4.10.3",
		"axe-playwright": "^2.1.0",
		"babel-plugin-react-compiler": "19.1.0-rc.2",
		"ci-info": "^4.2.0",
		"dotenv": "^16.5.0",
		"dotenv-cli": "^8.0.0",
		"dotenv-expand": "^12.0.2",
		"eslint": "^9.27.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.2.0",
		"globals": "^16.2.0",
		"is-ci": "^4.1.0",
		"lint-staged": "^16.0.0",
		"npm-run-all2": "^8.0.4",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.0",
		"storybook": "^9.0.13",
		"storybook-next-intl": "^2.0.13",
		"stylelint": "^16.19.1",
		"tailwindcss": "^4.1.7",
		"tailwindcss-react-aria-components": "^2.0.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
